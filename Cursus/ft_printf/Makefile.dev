CC = cc
CFLAGS = -Wall -Wextra -Werror
MAIN = main.c
NAME = libftprintf.a
EXEC = test

# Regla principal
all: $(NAME) $(EXEC)

# Generar la biblioteca est√°tica
$(NAME):
	make -f Makefile

# Crear el archivo ejecutable
$(EXEC): $(MAIN) $(NAME)
	$(CC) $(CFLAGS) $(MAIN) -L. -lftprintf -o $(EXEC)

# Limpiar el ejecutable
clean:
	rm -f $(EXEC)

# Limpiar todos los archivos generados
fclean: clean
	rm -f $(NAME)

# Regenerar todo
re: fclean all

.PHONY: all clean fclean re

